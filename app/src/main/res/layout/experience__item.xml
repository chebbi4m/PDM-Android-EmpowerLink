<!-- experience_item.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    app:cardUseCompatPadding="true"
    android:background="@drawable/itemback"
    android:layout_marginHorizontal="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/itemback"
        android:padding="10dp">

        <!-- Your experience item views go here -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/creatorImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/profile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/creatorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Creator Name"
                    tools:textStyle="bold" />

                <TextView
                    android:id="@+id/experienceDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience Date"
                    tools:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/experienceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Experience Title"
            android:textSize="20sp"
            tools:textStyle="bold" />

        <TextView
            android:id="@+id/experienceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Experience Text" />

    </LinearLayout>

</androidx.cardview.widget.CardView>